<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">OAuth Home</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <% if (user) { %>
            <li class="nav-item">
                <a class="btn btn-outline-danger" href="/auth/logout" style="margin-right: 10px">Logout</a>
            </li>
            <li class="nav-item">
                <img src="<%= user.thumbnail %>" class="rounded-circle" width="40" />
            </li>
            <% } else { %>
            <li class="nav-item">
                <a class="btn btn-outline-success" href="/auth/login">Login</a>
            </li>
            <% } %>
        </ul>
    </nav>
</header>